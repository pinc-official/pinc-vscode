{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PiNC",
  "scopeName": "source.pi",
  "patterns": [
    {
      "include": "#block_comment"
    },
    {
      "include": "#double_comment"
    },
    {
      "include": "#operator"
    },
    {
      "include": "#punctuations"
    },
    {
      "include": "#tag"
    },
    {
      "include": "#jsx"
    },
    {
      "include": "#string"
    },
    {
      "include": "#char"
    },
    {
      "include": "#array"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#number"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#assignment"
    }
  ],
  "repository": {
    "keyword": {
      "patterns": [
        {
          "name": "storage.type",
          "match": "\\b(component|page|store|site|library|let|mutable|use|fn)\\b"
        },
        {
          "name": "keyword.operator",
          "match": "\\b(reverse)\\b"
        },
        {
          "name": "keyword.control",
          "match": "\\b(else|for|break|continue|if|in)\\b"
        },
        {
          "name": "constant.language",
          "match": "\\b(false|true)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\b([A-Z][0-9a-zA-Z_]*)\\b",
          "name": "variable.parameter"
        },
        {
          "match": "\\b([a-z_][0-9a-zA-Z_]*)\\b",
          "name": "variable.parameter"
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "match": "\\b(0[xX][a-fA-F0-9_]+[Lln]?|0[oO][0-7_]+[Lln]?|0[bB][01_]+[Lln]?|[0-9][0-9_]*([Lln]|(\\.[0-9_]+)?([eE][-+]?[0-9_]+)?)?)\\b",
          "name": "constant.numeric"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "match": "(\\|>)|(@@)|(<-)|(->)|(\\|\\|)|(&&)|(\\+\\+)|(\\*\\*)|(\\+)|(-)|(\\*)|(/)|(\\.\\.\\.)|(\\.\\.)|(===)|(==)|(!)|(<=)|((\\s+)>(\\s+))|((\\s+)<(\\s+))|(>=)|(::)",
          "name": "keyword.operator keyword"
        }
      ]
    },
    "assignment": {
      "patterns": [
        {
          "match": "(=)|(:=)",
          "name": "keyword.operator.assignment"
        }
      ]
    },
    "punctuations": {
      "patterns": [
        {
          "match": ";",
          "name": "punctuation.terminator"
        },
        {
          "match": "\\.",
          "name": "punctuation.accessor"
        },
        {
          "match": "\\,",
          "name": "punctuation.separator"
        },
        {
          "match": "\\?|:",
          "name": "punctuation.separator"
        },
        {
          "match": "\\{",
          "name": "punctuation.section.braces.begin"
        },
        {
          "match": "\\}",
          "name": "punctuation.section.braces.end"
        },
        {
          "match": "\\(",
          "name": "punctuation.section.parens.begin"
        },
        {
          "match": "\\)",
          "name": "punctuation.section.parens.end"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.string.begin"
            }
          },
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.string.end"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            },
            {
              "name": "meta.template.expression",
              "begin": "\\{\\|",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.begin"
                }
              },
              "end": "\\|\\}",
              "endCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.end"
                }
              },
              "patterns": [
                {
                  "include": "#operator"
                },
                {
                  "include": "#punctuations"
                },
                {
                  "include": "#string"
                },
                {
                  "include": "#char"
                },
                {
                  "include": "#array"
                },
                {
                  "include": "#keyword"
                },
                {
                  "include": "#number"
                },
                {
                  "include": "#variables"
                }
              ]
            }
          ]
        }
      ]
    },
    "char": {
      "patterns": [
        {
          "name": "string.quoted.single",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.string.begin"
            }
          },
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.string.end"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\x\\h\\h"
            },
            {
              "name": "constant.character.escape",
              "match": "\\\\o\\d\\d\\d"
            },
            {
              "name": "constant.character.escape",
              "match": "\\\\\\d\\d\\d"
            },
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "array": {
      "patterns": [
        {
          "match": "\\[",
          "name": "punctuation.section.brackets.begin"
        },
        {
          "match": "\\]",
          "name": "punctuation.section.brackets.end"
        }
      ]
    },
    "jsx": {
      "patterns": [
        {
          "match": "\\s*(<>)",
          "captures": {
            "0": {
              "name": "punctuation.definition.tag"
            }
          }
        },
        {
          "match": "\\s*(</>)",
          "captures": {
            "0": {
              "name": "punctuation.definition.tag"
            }
          }
        },
        {
          "match": "\\s*(/>)",
          "captures": {
            "0": {
              "name": "punctuation.definition.tag"
            }
          }
        },
        {
          "match": "(<)([A-Z][0-9a-zA-Z_]*)(>|\\s+)",
          "captures": {
            "1": {
              "name": "punctuation.definition.tag"
            },
            "2": {
              "name": "entity.name.tag entity.name.namespace"
            },
            "3": {
              "name": "punctuation.definition.tag"
            }
          }
        },
        {
          "match": "(<)([a-z][0-9a-zA-Z_-]*)(>|\\s+)",
          "captures": {
            "1": {
              "name": "punctuation.definition.tag"
            },
            "2": {
              "name": "entity.name.tag"
            },
            "3": {
              "name": "punctuation.definition.tag"
            }
          }
        },
        {
          "match": "(<)([A-Z][0-9a-zA-Z_]*)\\s*",
          "captures": {
            "1": {
              "name": "punctuation.definition.tag"
            },
            "2": {
              "name": "entity.name.tag entity.name.namespace"
            }
          }
        },
        {
          "match": "(<)([a-z][0-9a-zA-Z_-]*)\\s*",
          "captures": {
            "1": {
              "name": "punctuation.definition.tag"
            },
            "2": {
              "name": "entity.name.tag"
            }
          }
        },
        {
          "match": "(</)([A-Z][0-9a-zA-Z_]*)\\s*(>)",
          "captures": {
            "1": {
              "name": "punctuation.definition.tag"
            },
            "2": {
              "name": "entity.name.tag entity.name.namespace"
            },
            "3": {
              "name": "punctuation.definition.tag"
            }
          }
        },
        {
          "match": "(</)([a-z][0-9a-zA-Z_-]*)\\s*(>)",
          "captures": {
            "1": {
              "name": "punctuation.definition.tag"
            },
            "2": {
              "name": "entity.name.tag"
            },
            "3": {
              "name": "punctuation.definition.tag"
            }
          }
        }
      ]
    },
    "tag": {
      "patterns": [
        {
          "match": "(#([A-Z][0-9a-zA-Z_]*))",
          "name": "support.function"
        }
      ]
    },
    "double_comment": {
      "begin": "//",
      "end": "$\\n?",
      "name": "comment.line.double-slash"
    },
    "block_comment": {
      "comment": "Block comment",
      "name": "comment.block.cxm",
      "begin": "/\\*",
      "end": "\\*/",
      "patterns": [
        {
          "include": "#block_comment"
        }
      ]
    }
  }
}
